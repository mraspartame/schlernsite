---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import { Card } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
---

<Layout
  title='Home'
  pageTitle='Schlern | Home'
  description='A personal site with a blog, landscape photography gallery, and browser-based tools.'
>
  <main class='bg-yellow p-6'>
    <section id='hero' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>About</h2>
      <div class='col-span-5'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              Nicht die HÃ¼tte.
            </p>
            <p class='mt-2 outfit text-xl md:text-2xl lg:text-3xl'>
              My corner of the internet, named after a big rock and it's little hut.
            </p>
            <div class='flex gap-4 flex-wrap'>
              <Button target={'_self'} href='/blog/'>
                Read the blog &rarr;
              </Button>
              <Button target={'_self'} href='/gallery/'>
                Explore the gallery &rarr;
              </Button>
            </div>
          </div>
        </Card>
      </div>

      <div class='col-span-3 flex flex-col gap-8'>
        <Card>
          <h2 class='text-2xl md:text-3xl lg:text-4xl mb-4 dm-serif'>
            Photography
          </h2>
          <p class='poppins mb-4'>
            Pictures from around the world.
          </p>
          <Button target={'_self'} href='/gallery/'>
            Open map &rarr;
          </Button>
        </Card>

        <Card>
          <h2 class='text-2xl md:text-3xl lg:text-4xl mb-4 dm-serif'>
            Browser Apps
          </h2>
          <p class='poppins mb-4'>
            Tools that run entirely in your browser, on your computer. Not the cloud.
          </p>
          <Button target={'_self'} href='/apps/'>
            See the tools &rarr;
          </Button>
        </Card>
      </div>
    </section>

    <RecentBlogPosts />
  </main>
</Layout>
